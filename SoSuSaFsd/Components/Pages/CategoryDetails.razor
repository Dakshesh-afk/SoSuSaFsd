    // --- SAFE UPLOAD STORAGE ---
    private class PendingFile
    {
        public string SavedPath { get; set; } = "";
        public string MediaType { get; set; } = "";
        public string PhysicalPath { get; set; } = "";
    }
    private List<PendingFile> pendingUploads = new();

    private bool isUploading = false;
    private const long MaxFileSize = 1024 * 1024 * 200; // 200 MB
    private const int MaxAllowedFiles = 10;

    protected override async Task OnParametersSetAsync()
    {
        IsLoading = true;
        errorMessage = "";
        hasApprovedAccess = false;
        hasPendingRequest = false;

        try
        {
            using var context = DbFactory.CreateDbContext();
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (currentUserId == null && user.Identity?.IsAuthenticated == true)
            {
                using var scope = ScopeFactory.CreateScope();
                var userManager = scope.ServiceProvider.GetRequiredService<UserManager<Users>>();
                var dbUser = await userManager.GetUserAsync(user);
                currentUserId = dbUser?.Id;
            }

            CurrentCategory = await context.Categories.FirstOrDefaultAsync(c => c.Id == Id);
            if (CurrentCategory != null) Title = "#" + CurrentCategory.CategoryName;

            // Check if user is admin
            if (user.Identity?.IsAuthenticated == true)
            {
                isAdmin = user.IsInRole("Admin");
            }

            if (!string.IsNullOrEmpty(currentUserId) && CurrentCategory != null)
            {
                var existingFollow = await context.CategoryFollows.FirstOrDefaultAsync(cf => cf.UserId == currentUserId && cf.CategoryId == CurrentCategory.Id);
                isFollowing = (existingFollow != null);

                // --- NEW: Check for Access Status ---
                var accessRequest = await context.CategoryAccessRequests
                    .OrderByDescending(r => r.DateCreated)
                    .FirstOrDefaultAsync(r => r.UserId == currentUserId && r.CategoryId == CurrentCategory.Id);

                if (accessRequest != null)
                {
                    if (accessRequest.Status == "Approved") hasApprovedAccess = true;
                    if (accessRequest.Status == "Pending") hasPendingRequest = true;
                }
                // ------------------------------------
            }

            CategoryPosts = await context.Posts
                .Where(p => p.CategoryId == Id)
                .Include(p => p.User)
                .Include(p => p.Media) // Load media
                .OrderByDescending(p => p.DateCreated)
                .ToListAsync();

            if (!string.IsNullOrEmpty(currentUserId))
            {
                RecentCategories = await context.Categories.Where(c => c.CreatedBy == currentUserId).OrderByDescending(c => c.DateCreated).Take(5).ToListAsync();
                FollowedCategories = await context.CategoryFollows.Where(cf => cf.UserId == currentUserId).Include(cf => cf.Category).Select(cf => cf.Category!).ToListAsync();
            }
        }
        catch (Exception ex) { errorMessage = "Error loading: " + ex.Message; }
        finally { IsLoading = false; }
    }

    // --- SAVE FILE IMMEDIATELY ---
    private async Task HandleFilesSelected(InputFileChangeEventArgs e)
    {
        errorMessage = "";
        isUploading = true;

        try
        {
            var newFiles = e.GetMultipleFiles(MaxAllowedFiles);
            var uploadsFolder = Path.Combine(Environment.WebRootPath, "uploads");
            if (!Directory.Exists(uploadsFolder)) Directory.CreateDirectory(uploadsFolder);

            foreach (var file in newFiles)
            {
                if (pendingUploads.Count >= MaxAllowedFiles) break;

                if (file.Size <= MaxFileSize)
                {
                    try
                    {
                        var extension = Path.GetExtension(file.Name).ToLower();
                        bool isVideo = (extension == ".mp4" || extension == ".webm" || extension == ".mov");

                        var fileName = $"{Guid.NewGuid()}{extension}";
                        var physicalPath = Path.Combine(uploadsFolder, fileName);
                        var webPath = $"/uploads/{fileName}";

                        await using var fileStream = new FileStream(physicalPath, FileMode.Create);
                        await file.OpenReadStream(MaxFileSize).CopyToAsync(fileStream);

                        pendingUploads.Add(new PendingFile
                        {
                            SavedPath = webPath,
                            PhysicalPath = physicalPath,
                            MediaType = isVideo ? "Video" : "Image"
                        });
                    }
                    catch (Exception ex) { errorMessage = $"Error reading {file.Name}: {ex.Message}"; }
                }
                else { errorMessage = $"File {file.Name} is too large."; }
            }
        }
        finally
        {
            isUploading = false;
        }
    }

    private void RemoveFile(int index)
    {
        if (index >= 0 && index < pendingUploads.Count)
        {
            var file = pendingUploads[index];
            try
            {
                if (System.IO.File.Exists(file.PhysicalPath))
                {
                    System.IO.File.Delete(file.PhysicalPath);
                }
            }
            catch { }

            pendingUploads.RemoveAt(index);
        }
    }

    // --- NEW: Handle Access Request Submission ---
    private async Task HandleSubmitRequest()
    {
        if (string.IsNullOrEmpty(currentUserId)) return;

        try
        {
            using var context = DbFactory.CreateDbContext();

            // Check if already exists to prevent duplicates
            var exists = await context.CategoryAccessRequests
                .AnyAsync(r => r.UserId == currentUserId && r.CategoryId == Id && r.Status == "Pending");

            if (exists)
            {
                errorMessage = "You already have a pending request.";
                showRequestModal = false;
                hasPendingRequest = true;
                return;
            }

            var request = new CategoryAccessRequests
            {
                UserId = currentUserId,
                CategoryId = Id,
                Reason = requestReason,
                Status = "Pending",
                DateCreated = DateTime.Now,
                DateUpdated = DateTime.Now
            };

            context.CategoryAccessRequests.Add(request);
            await context.SaveChangesAsync();

            showRequestModal = false;
            requestReason = "";
            hasPendingRequest = true; // Update UI state
            StateHasChanged();
        }
        catch (Exception ex)
        {
            errorMessage = "Error sending request: " + ex.Message;
        }
    }
