@page "/category/{Id:int}"
@rendermode InteractiveServer
@using SoSuSaFsd.Data
@using SoSuSaFsd.Domain
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@inject IDbContextFactory<SoSuSaFsdContext> DbFactory
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject IServiceScopeFactory ScopeFactory

<PageTitle>@Title</PageTitle>

<style>
    /* --- 1. GLOBAL & LAYOUT --- */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #ffffff;
        margin: 0;
        color: #333;
    }

    a {
        text-decoration: none;
        color: #333;
        cursor: pointer;
    }

    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    hr {
        border: 0;
        border-top: 1px solid #ddd;
        margin: 15px 0;
    }

    /* --- 2. HEADER --- */
    .site-header {
        background-color: #ffffff;
        border-bottom: 2px solid #333;
        padding: 10px 0;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
    }

    .header-container {
        width: 95%;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo-area {
        display: flex;
        align-items: center;
        text-decoration: none;
        cursor: pointer;
    }

    .logo-icon {
        width: 40px;
        height: 40px;
        background-color: #333;
        color: white;
        border-radius: 50% 50% 50% 4px;
        margin-right: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .logo-text {
        font-size: 32px;
        font-weight: 700;
        color: #333;
        letter-spacing: -1px;
    }

    /* --- 3. MAIN LAYOUT --- */
    .main-layout {
        display: flex;
        justify-content: center;
        width: 100%;
        max-width: 1100px;
        margin: 0 auto 20px auto;
        min-height: 80vh;
        gap: 0;
        margin-top: 80px;
    }

    /* --- SIDEBAR STYLES --- */
    .sidebar {
        width: 240px;
        position: sticky;
        top: 80px;
        height: calc(100vh - 80px);
        display: flex;
        flex-direction: column;
        padding-top: 20px;
        box-sizing: border-box;
    }

    .sidebar-left {
        border-right: 1px solid #ddd;
        padding-right: 20px;
    }

    .sidebar-right {
        border-left: 1px solid #ddd;
        padding-left: 20px;
    }

    .sidebar-section {
        margin-bottom: 20px;
        padding-bottom: 10px;
    }

        .sidebar-section h3 {
            font-size: 18px;
            color: #333;
            margin-bottom: 15px;
            font-weight: bold;
            text-transform: none;
        }

    .category-list li {
        margin-bottom: 10px;
    }

    .category-link {
        font-size: 16px;
        color: #555;
        display: flex;
        align-items: center;
        padding: 5px 0;
        transition: color 0.2s;
        cursor: pointer;
    }

        .category-link:hover {
            color: #000;
            text-decoration: underline;
        }

    .hashtag {
        color: #999;
        font-weight: normal;
        margin-right: 8px;
    }

    .verified-badge {
        color: #1da1f2;
        font-size: 14px;
        margin-left: 5px;
        vertical-align: middle;
    }

    .sidebar-footer {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #ddd;
    }

    .category-search-container {
        display: flex;
        gap: 10px;
        align-items: center;
    }

        .category-search-container input {
            flex-grow: 1;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
            width: 100%;
        }

    .create-cat-btn {
        background-color: #333;
        color: white;
        border: none;
        width: 34px;
        height: 34px;
        border-radius: 4px;
        font-size: 20px;
        line-height: 1;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

        .create-cat-btn:hover {
            background-color: #000;
        }


    /* --- FEED AREA --- */
    .feed-area {
        width: 600px;
        flex-grow: 0;
        padding-top: 20px;
        margin: 0 40px;
    }

    .page-title {
        font-size: 32px;
        font-weight: 800;
        color: #222;
        margin: 0;
    }

    /* --- POST CARD --- */
    .post-card {
        background-color: #fff;
        padding: 0;
        margin-bottom: 20px;
        border: 1px solid #e1e1e1;
        border-radius: 8px;
    }

    .post-header {
        display: flex;
        align-items: center;
        padding: 15px;
    }

    .post-avatar {
        width: 48px;
        height: 48px;
        background-color: #ddd;
        border-radius: 50%;
        margin-right: 15px;
    }

    .post-content {
        padding: 5px 15px 20px 15px;
        font-size: 16px;
        line-height: 1.6;
    }

    .post-actions {
        border-top: 1px solid #f0f0f0;
        display: flex;
    }

    .action-btn {
        flex-grow: 1;
        background: none;
        border: none;
        padding: 12px 0;
        cursor: pointer;
        color: #666;
    }

        .action-btn:hover {
            background-color: #f9f9f9;
            color: #000;
        }

    /* --- CATEGORY HEADER SPECIFIC --- */
    .category-header-card {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        text-align: center;
    }

    .cat-desc {
        color: #666;
        margin-top: 10px;
        font-size: 15px;
    }

    .join-btn {
        background-color: #333;
        color: white;
        border: none;
        padding: 8px 24px;
        border-radius: 20px;
        font-weight: bold;
        margin-top: 15px;
        cursor: pointer;
    }

    .follow-btn {
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: bold;
        cursor: pointer;
        margin-right: 10px;
        border: 1px solid transparent;
        transition: all 0.2s;
    }

        .follow-btn.not-following {
            background-color: #000;
            color: white;
        }

        .follow-btn.following {
            background-color: #fff;
            color: #333;
            border: 1px solid #ccc;
        }

        .follow-btn:hover {
            opacity: 0.8;
        }

    /* --- MODAL STYLES --- */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background-color: #fff;
        margin: auto;
        padding: 25px;
        border: none;
        width: 90%;
        max-width: 450px;
        border-radius: 12px;
        position: relative;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .modal-close {
        color: #aaa;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
        line-height: 20px;
    }

        .modal-close:hover {
            color: black;
        }

    .login-btn {
        background-color: #333;
        color: white;
        padding: 8px 20px;
        border: none;
        border-radius: 20px;
        font-size: 15px;
        cursor: pointer;
        font-weight: bold;
    }

        .login-btn:hover {
            background-color: #000;
        }

        .login-btn.secondary {
            background-color: #fff;
            color: #333;
            border: 1px solid #ccc;
        }

            .login-btn.secondary:hover {
                background-color: #f0f0f0;
            }
</style>

<header class="site-header">
    <div class="header-container">
        <div class="logo-area" onclick="location.href='/'">
            <div class="logo-icon"><i class="fas fa-check"></i></div>
            <span class="logo-text">SoSuSa</span>
        </div>
        <div class="header-right">
            <button class="join-btn" onclick="location.href='/'">Back Home</button>
        </div>
    </div>
</header>

<div class="main-layout">

    @* --- LEFT SIDEBAR: Recently Created (Same as before) --- *@
    <aside class="sidebar sidebar-left">
        <div class="sidebar-section">
            <h3>Recently Created</h3>
            <ul class="category-list">
                @if (RecentCategories != null && RecentCategories.Any())
                {
                    @foreach (var cat in RecentCategories)
                    {
                        <li>
                            <a class="category-link" href="#" @onclick:preventDefault @onclick='@(() => NavigateToCategory(cat.Id))'>
                                <span class="hashtag">#</span> @cat.CategoryName
                            </a>
                        </li>
                    }
                }
                else
                {
                    <AuthorizeView>
                        <Authorized>
                            <li>You haven't created any categories yet.</li>
                        </Authorized>
                        <NotAuthorized>
                            <li>Login to see your categories.</li>
                        </NotAuthorized>
                    </AuthorizeView>
                }
            </ul>
            <hr />
        </div>

        <div class="sidebar-section">
            <div class="sidebar-footer">
                <div class="category-search-container">
                    <input type="text"
                           placeholder="Find category..."
                           @bind="searchTerm"
                           @bind:event="oninput" />
                    <button type="button"
                            class="create-cat-btn"
                            title="Create New Category"
                            @onclick="HandleCategorySearch">
                        +
                    </button>
                </div>
            </div>
        </div>
    </aside>

    @* --- CENTER: Feed Area --- *@
    <main class="feed-area">
        @if (CurrentCategory == null)
        {
            <div style="text-align: center; margin-top: 50px;">
                @if (IsLoading)
                {
                    <span>Loading...</span>
                }
                else
                {
                    <span>Category not found.</span>
                }
            </div>
        }
        else
        {
            <div class="category-header-card">
                <h1 class="page-title">#@CurrentCategory.CategoryName</h1>
                <p class="cat-desc">
                    @(string.IsNullOrEmpty(CurrentCategory.CategoryDescription) ? "No description provided." : CurrentCategory.CategoryDescription)
                </p>

                @* Error Box *@
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div style="color: #721c24; background-color: #f8d7da; border: 1px solid #f5c6cb; padding: 10px; margin: 15px 0; border-radius: 5px;">
                        <strong>System Error:</strong> @errorMessage
                    </div>
                }

                <div style="margin-top: 15px;">
                    <button class="follow-btn @(isFollowing ? "following" : "not-following")" @onclick="ToggleFollow">
                        @(isFollowing ? "Unfollow" : "Follow")
                    </button>

                    <button class="join-btn">Create Post</button>
                </div>
            </div>

            <hr />

            <div class="post-card">
                <div class="post-header">
                    <div class="post-avatar"></div>
                    <div>
                        <b>System</b>
                        <div style="font-size: 12px; color: #888;">Posted in #@CurrentCategory.CategoryName</div>
                    </div>
                </div>
                <div class="post-content">
                    Welcome to the <b>#@CurrentCategory.CategoryName</b> feed! Be the first to post something here.
                </div>
                <div class="post-actions">
                    <button class="action-btn">Like</button>
                    <button class="action-btn">Comment</button>
                    <button class="action-btn">Share</button>
                </div>
            </div>
        }
    </main>

    @* --- RIGHT SIDEBAR: FOLLOWED CATEGORIES (UPDATED) --- *@
    <aside class="sidebar sidebar-right">
        <div class="sidebar-section">
            <h3>Following</h3> <ul class="category-list">
                @if (FollowedCategories != null && FollowedCategories.Any())
                {
                    @foreach (var cat in FollowedCategories)
                    {
                        <li>
                            <a class="category-link" href="#" @onclick:preventDefault @onclick='@(() => NavigateToCategory(cat.Id))'>
                                <span class="hashtag">#</span> @cat.CategoryName
                            </a>
                        </li>
                    }
                }
                else
                {
                    <AuthorizeView>
                        <Authorized>
                            <li>You are not following any categories yet.</li>
                        </Authorized>
                        <NotAuthorized>
                            <li>Login to see your followed categories.</li>
                        </NotAuthorized>
                    </AuthorizeView>
                }
            </ul>
        </div>
    </aside>

</div>

@* Modal for create category *@
<div class="modal" style="display: @(showCreateConfirm ? "flex" : "none")">
    <div class="modal-content">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
            <h2 style="margin: 0;">Category Not Found</h2>
            <span class="modal-close" style="float: none; margin: 0;" @onclick="() => showCreateConfirm = false">&times;</span>
        </div>
        <hr />
        <p style="margin-bottom: 20px; font-size: 16px;">
            The category <b>#@searchTerm</b> does not exist yet.
            <br /><br />
            Would you like to create it?
        </p>
        <div style="display: flex; gap: 10px;">
            <button type="button" class="login-btn" style="flex:1;" @onclick="NavigateToCreate">Yes, Create</button>
            <button type="button" class="login-btn secondary" style="flex:1;" @onclick="() => showCreateConfirm = false">No, Cancel</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Categories? CurrentCategory;
    private List<Categories> RecentCategories = new();

    // UPDATED LIST NAME
    private List<Categories> FollowedCategories = new();

    private bool IsLoading = true;
    private string Title = "Category";
    private bool isFollowing = false;
    private string searchTerm = "";
    private bool showCreateConfirm = false;

    // Error handling & User tracking
    private string errorMessage = "";
    private string? currentUserId;

    protected override async Task OnParametersSetAsync()
    {
        IsLoading = true;
        errorMessage = "";

        try
        {
            using var context = DbFactory.CreateDbContext();

            // 1. Fetch Current Category
            CurrentCategory = await context.Categories.FirstOrDefaultAsync(c => c.Id == Id);
            if (CurrentCategory != null)
            {
                Title = "#" + CurrentCategory.CategoryName;
            }

            // 2. Get Logged-in User ID
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            currentUserId = user.FindFirst(c => c.Type == System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (currentUserId == null && user.Identity?.IsAuthenticated == true)
            {
                using var scope = ScopeFactory.CreateScope();
                var userManager = scope.ServiceProvider.GetRequiredService<UserManager<Users>>();
                var dbUser = await userManager.GetUserAsync(user);
                currentUserId = dbUser?.Id;
            }

            // 3. CHECK FOLLOW STATUS
            if (!string.IsNullOrEmpty(currentUserId) && CurrentCategory != null)
            {
                var existingFollow = await context.CategoryFollows
                    .FirstOrDefaultAsync(cf => cf.UserId == currentUserId && cf.CategoryId == CurrentCategory.Id);

                isFollowing = (existingFollow != null);
            }
            else
            {
                isFollowing = false;
            }

            // 4. Load Sidebars
            if (!string.IsNullOrEmpty(currentUserId))
            {
                // Left Sidebar: Recently Created
                RecentCategories = await context.Categories
                    .Where(c => c.CreatedBy == currentUserId)
                    .OrderByDescending(c => c.DateCreated)
                    .Take(5)
                    .ToListAsync();

                // Right Sidebar: FOLLOWED CATEGORIES (NEW LOGIC)
                // We join CategoryFollows with Categories to get the ones the user follows
                FollowedCategories = await context.CategoryFollows
                    .Where(cf => cf.UserId == currentUserId)
                    .Include(cf => cf.Category) // Ensure we load the category details
                    .Select(cf => cf.Category!) // Select just the Category object
                    .ToListAsync();
            }
            else
            {
                RecentCategories = new List<Categories>();
                FollowedCategories = new List<Categories>();
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading page: " + ex.Message;
            Console.WriteLine(ex.ToString());
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task ToggleFollow()
    {
        if (string.IsNullOrEmpty(currentUserId))
        {
            Navigation.NavigateTo("/Account/Login", forceLoad: true);
            return;
        }

        try
        {
            using var context = DbFactory.CreateDbContext();

            if (isFollowing)
            {
                // UNFOLLOW
                var recordToDelete = await context.CategoryFollows
                    .FirstOrDefaultAsync(cf => cf.UserId == currentUserId && cf.CategoryId == Id);

                if (recordToDelete != null)
                {
                    context.CategoryFollows.Remove(recordToDelete);
                    await context.SaveChangesAsync();
                }
                isFollowing = false;
            }
            else
            {
                // FOLLOW
                if (Id == 0)
                {
                    errorMessage = "Invalid Category ID";
                    return;
                }

                var newFollow = new CategoryFollows
                {
                    UserId = currentUserId,
                    CategoryId = Id,
                    DateCreated = DateTime.Now,
                    DateUpdated = DateTime.Now,
                    CreatedBy = currentUserId,
                    UpdatedBy = currentUserId
                };

                context.CategoryFollows.Add(newFollow);
                await context.SaveChangesAsync();
                isFollowing = true;
            }

            // RELOAD FOLLOWED LIST
            // This ensures the sidebar updates immediately after you click the button
            FollowedCategories = await context.CategoryFollows
                    .Where(cf => cf.UserId == currentUserId)
                    .Include(cf => cf.Category)
                    .Select(cf => cf.Category!)
                    .ToListAsync();

            errorMessage = "";
        }
        catch (Exception ex)
        {
            errorMessage = $"Action Failed: {ex.Message}";
        }
    }

    private void NavigateToCategory(int id)
    {
        Navigation.NavigateTo($"/category/{id}", forceLoad: true);
    }

    private async Task HandleCategorySearch()
    {
        if (string.IsNullOrWhiteSpace(searchTerm)) return;

        try
        {
            using var context = DbFactory.CreateDbContext();
            var existingCategory = await context.Categories
                .FirstOrDefaultAsync(c => c.CategoryName.ToLower() == searchTerm.ToLower());

            if (existingCategory != null)
            {
                Navigation.NavigateTo($"/category/{existingCategory.Id}", forceLoad: true);
            }
            else
            {
                showCreateConfirm = true;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Search Error: {ex.Message}";
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo($"/categories/create?name={searchTerm}");
    }
}