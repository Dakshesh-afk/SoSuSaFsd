    private async Task HandleCreatePost()
    {
        if (string.IsNullOrWhiteSpace(newPostContent) && pendingUploads.Count == 0) return;
        if (string.IsNullOrEmpty(currentUserId)) { Navigation.NavigateTo("/Account/Login", true); return; }

        // --- UPDATED SECURITY CHECK ---
        // Check if category is verified and user is NEITHER admin NOR approved
        if (CurrentCategory?.IsVerified == true && !isAdmin && !hasApprovedAccess)
        {
            errorMessage = "This category is verified. You must request access to post here.";
            return;
        }

        try
        {
            using var context = DbFactory.CreateDbContext();

            // Re-check DB state for security
            var category = await context.Categories.FirstOrDefaultAsync(c => c.Id == Id);

            // Check DB for approved status again to be safe
            bool dbHasAccess = await context.CategoryAccessRequests
                .AnyAsync(r => r.UserId == currentUserId && r.CategoryId == Id && r.Status == "Approved");

            if (category?.IsVerified == true && !isAdmin && !dbHasAccess)
            {
                errorMessage = "This category is verified. You must request access to post here.";
                return;
            }

            var newPost = new Posts
            {
                Content = newPostContent,
                CategoryId = Id,
                UserId = currentUserId,
                PostStatus = "Published",
                DateCreated = DateTime.Now,
                DateUpdated = DateTime.Now,
                CreatedBy = currentUserId,
                UpdatedBy = currentUserId,
                Media = new List<PostMedia>()
            };

            foreach (var file in pendingUploads)
            {
                newPost.Media.Add(new PostMedia
                {
                    MediaPath = file.SavedPath,
                    MediaType = file.MediaType
                });
            }

            context.Posts.Add(newPost);
            await context.SaveChangesAsync();

            ClosePostModal();
            CategoryPosts = await context.Posts.Where(p => p.CategoryId == Id).Include(p => p.User).Include(p => p.Media).OrderByDescending(p => p.DateCreated).ToListAsync();
        }
        catch (Exception ex) { errorMessage = "Error posting: " + ex.Message; }
    }

    private void ClosePostModal()
    {
        showPostModal = false;
        newPostContent = "";
        pendingUploads.Clear();
        errorMessage = "";
    }

    private bool CanUserPost()
    {
        // If category is verified, check for Admin OR Approved Access
        if (CurrentCategory?.IsVerified == true)
        {
            return isAdmin || hasApprovedAccess;
        }
        // If category is not verified, anyone can post (if logged in)
        return !string.IsNullOrEmpty(currentUserId);
    }

    private async Task ToggleFollow()
    {
        if (string.IsNullOrEmpty(currentUserId)) { Navigation.NavigateTo("/Account/Login", true); return; }
        try
        {
            using var context = DbFactory.CreateDbContext();
            if (isFollowing)
            {
                var record = await context.CategoryFollows.FirstOrDefaultAsync(cf => cf.UserId == currentUserId && cf.CategoryId == Id);
                if (record != null) context.CategoryFollows.Remove(record);
                isFollowing = false;
            }
            else
            {
                context.CategoryFollows.Add(new CategoryFollows { UserId = currentUserId, CategoryId = Id, DateCreated = DateTime.Now, DateUpdated = DateTime.Now });
                isFollowing = true;
            }
            await context.SaveChangesAsync();
            FollowedCategories = await context.CategoryFollows.Where(cf => cf.UserId == currentUserId).Include(cf => cf.Category).Select(cf => cf.Category!).ToListAsync();
        }
        catch (Exception ex) { errorMessage = ex.Message; }
    }

