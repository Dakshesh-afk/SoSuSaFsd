@page "/category/{Id:int}"
@rendermode InteractiveServer
@using SoSuSaFsd.Data
@using SoSuSaFsd.Domain
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Hosting
@inject IDbContextFactory<SoSuSaFsdContext> DbFactory
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject IServiceScopeFactory ScopeFactory
@inject IWebHostEnvironment Environment
@inject SoSuSaFsd.Services.IPostService PostService
@inject SoSuSaFsd.Services.ICategoryService CategoryService

<PageTitle>@Title</PageTitle>
<link rel="stylesheet" href="/styles/category-details.css" />

<header class="site-header">
    <div class="header-container">
        <div class="logo-area" onclick="location.href='/'">
            <div class="logo-icon"><i class="fas fa-check"></i></div>
            <span class="logo-text">SoSuSa</span>
        </div>

        <div style="display: flex; gap: 10px; align-items: center;">
            @* --- NEW REFRESH BUTTON --- *@
            <button class="login-btn secondary" style="min-width: 40px; padding: 0 10px;" title="Refresh Page" @onclick="RefreshPage">
                <i class="fas fa-redo"></i>
            </button>

            <button class="login-btn" onclick="location.href='/'">Back Home</button>
        </div>
    </div>
</header>

<div class="main-layout">
    @* --- LEFT SIDEBAR --- *@
    <aside class="sidebar sidebar-left">
        <div class="sidebar-section scrollable-list">
            <h3>Following</h3>
            <ul class="category-list">
                @if (FollowedCategories != null && FollowedCategories.Any())
                {
                    @foreach (var cat in FollowedCategories)
                    {
                        <li>
                            <a class="category-link" href="#" @onclick:preventDefault @onclick="@(() => NavigateToCategory(cat.Id))">
                                <span class="link-text-wrapper"><span class="hashtag">#</span> @cat.CategoryName</span>
                                @if (cat.IsVerified)
                                {
                                    <i class="fas fa-check-circle verified-badge-small" title="Verified"></i>
                                }
                            </a>
                        </li>
                    }
                }
                else
                {
                    <AuthorizeView>
                        <Authorized>
                            <li class="empty-list-item">You aren't following anything yet.</li>
                        </Authorized>
                        <NotAuthorized>
                            <li class="empty-list-item">Login to see follows.</li>
                        </NotAuthorized>
                    </AuthorizeView>
                }
            </ul>
        </div>

        <div class="sidebar-footer">
            <div class="category-search-container">
                <input type="text" placeholder="Find category..." @bind="searchTerm" @bind:event="oninput" />
                <button type="button" class="create-cat-btn" title="Create New Category" @onclick="HandleCategorySearch">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>
    </aside>

    @* --- MAIN FEED --- *@
    <main class="feed-area">
        @if (CurrentCategory == null)
        {
            <div class="loading-state">
                @if (IsLoading)
                {
                    <span>Loading...</span>
                }
                else
                {
                    <span>Category not found.</span>
                }
            </div>
        }
        else
        {
            <div class="category-header-card">
                <h1 class="page-title">
                    #@CurrentCategory.CategoryName
                    @if (CurrentCategory.IsVerified)
                    {
                        <i class="fas fa-check-circle verified-badge" title="Verified Category"></i>
                    }
                </h1>
                <p class="cat-desc">@(string.IsNullOrEmpty(CurrentCategory.CategoryDescription) ? "No description provided." : CurrentCategory.CategoryDescription)</p>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-error">
                        <strong>Error:</strong> @errorMessage
                    </div>
                }

                <div class="action-buttons">
                    <button class="follow-btn @(isFollowing ? "following" : "not-following")" @onclick="ToggleFollow">
                        @(isFollowing ? "Unfollow" : "Follow")
                    </button>
                    @if (CanUserPost())
                    {
                        <button class="login-btn" @onclick="() => showPostModal = true">Create Post</button>
                    }
                    else if (hasPendingRequest)
                    {
                        <button class="login-btn" disabled>Request Pending</button>
                    }
                    else if (CurrentCategory?.IsVerified == true)
                    {
                        <button class="login-btn" @onclick="() => showRequestModal = true">Request Access</button>
                    }
                    else
                    {
                        <button class="login-btn" @onclick="() => showPostModal = true">Create Post</button>
                    }
                </div>

                @if (CurrentCategory?.IsVerified == true && !CanUserPost() && !hasPendingRequest)
                {
                    <div class="alert alert-warning">
                        <strong>?? Verified Category:</strong> This category is restricted. You must request access to post here.
                    </div>
                }
                else if (hasPendingRequest)
                {
                    <div class="alert alert-info">
                        <strong>?? Pending:</strong> Your request to post in this verified category is awaiting admin approval.
                    </div>
                }
            </div>

            <hr />

            @if (CategoryPosts != null && CategoryPosts.Any())
            {
                <div style="margin-bottom: 20px;">
                    <input type="text" placeholder="Search posts in this category..." @bind="postSearchTerm" @bind:event="oninput" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 14px; box-sizing: border-box;" />
                </div>

                // Calculate filtered posts
                var resultList = (IEnumerable<Posts>)CategoryPosts;

                // 1. If user typed in the local search bar, prioritize that
                if (!string.IsNullOrWhiteSpace(postSearchTerm))
                {
                    resultList = resultList.Where(p =>
                    p.Content.Contains(postSearchTerm, StringComparison.OrdinalIgnoreCase) ||
                    (p.User?.UserName ?? "").Contains(postSearchTerm, StringComparison.OrdinalIgnoreCase));
                }
                // 2. Otherwise, if we came from the main search (URL has focusPostId), show only that post
                else if (FocusPostId.HasValue)
                {
                    resultList = resultList.Where(p => p.Id == FocusPostId.Value);
                }

                var filteredPosts = resultList.ToList();

                @* "View All" button if looking at specific search result *@
                @if (FocusPostId.HasValue && string.IsNullOrWhiteSpace(postSearchTerm))
                {
                    <div style="margin-bottom: 15px;">
                        <button class="login-btn secondary" @onclick="ClearSearchAndNavigate">
                            ? View all posts in #@CurrentCategory?.CategoryName
                        </button>
                    </div>
                }

                @if (filteredPosts.Any())
                {
                    @foreach (var post in filteredPosts)
                    {
                        <div class="post-card">
                            <div class="post-header">
                                <div class="post-avatar" style="background-image: url('@(post.User?.ProfileImage ?? "")');"></div>
                                <div>
                                    <b>@(post.User?.UserName ?? "User")</b>
                                    <div class="post-date">@post.DateCreated.ToString("MMM dd, yyyy • HH:mm")</div>
                                </div>
                            </div>
                            <div class="post-content">@post.Content</div>
                            @if (post.Media != null && post.Media.Any())
                            {
                                @RenderCarousel(post)
                            }
                            <div class="post-actions">
                                <button class="action-btn" @onclick="() => ToggleLike(post.Id)">
                                    @RenderLikeButton(post)
                                </button>
                                <button class="action-btn" @onclick="() => ToggleComments(post.Id)">
                                    <i class="far fa-comment"></i> Comment
                                </button>
                                <button class="action-btn" @onclick="@(() => OpenReportModal(post.Id))" title="Report Post">
                                    <i class="far fa-flag"></i> Report
                                </button>
                            </div>
                            @if (IsCommentSectionVisible(post.Id))
                            {
                                @* --- NEW COMMENT SECTION (Replaces RenderFragment) --- *@
                                <div class="comment-section">
                                    <div class="comment-list">
                                        @if (_postComments.ContainsKey(post.Id) && _postComments[post.Id] != null)
                                        {
                                            var allComments = _postComments[post.Id];
                                            var parentComments = allComments.Where(c => c.ParentCommentID == null).OrderBy(c => c.DateCreated);

                                            @foreach (var comment in parentComments)
                                            {
                                                var replies = allComments.Where(c => c.ParentCommentID == comment.Id).OrderBy(c => c.DateCreated).ToList();

                                                // --- PARENT COMMENT ---
                                                <div class="comment-item">
                                                    <div class="comment-avatar" style="background-image: url('@(comment.User?.ProfileImage ?? "")');"></div>
                                                    <div class="comment-bubble-wrapper" style="flex: 1;">
                                                        <div class="comment-bubble">
                                                            <div>
                                                                <span class="comment-user">@(comment.User?.UserName ?? "User")</span>
                                                                <span class="comment-date">@comment.DateCreated.ToString("MMM dd, HH:mm")</span>
                                                            </div>
                                                            <div class="comment-text">@comment.Content</div>
                                                        </div>
                                                        <div style="margin-top: 2px; margin-left: 10px;">
                                                            <button style="background:none; border:none; cursor:pointer; font-size:11px; color:#666; font-weight:600;"
                                                                    @onclick="() => ToggleReplyBox(comment.Id)">
                                                                Reply
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>

                                                // --- REPLIES ---
                                                @if (replies.Any())
                                                {
                                                    <div style="margin-left: 45px; border-left: 2px solid #eee; padding-left: 10px; margin-bottom: 10px;">
                                                        @foreach (var reply in replies)
                                                        {
                                                            <div class="comment-item" style="margin-bottom: 8px;">
                                                                <div class="comment-avatar" style="width: 24px; height: 24px; background-image: url('@(reply.User?.ProfileImage ?? "")');"></div>
                                                                <div class="comment-bubble" style="padding: 8px 12px;">
                                                                    <div>
                                                                        <span class="comment-user" style="font-size: 11px;">@(reply.User?.UserName ?? "User")</span>
                                                                        <span class="comment-date" style="font-size: 10px;">@reply.DateCreated.ToString("MMM dd, HH:mm")</span>
                                                                    </div>
                                                                    <div class="comment-text" style="font-size: 13px;">@reply.Content</div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                }

                                                // --- REPLY INPUT BOX ---
                                                @if (_activeReplyBoxes.ContainsKey(comment.Id) && _activeReplyBoxes[comment.Id])
                                                {
                                                    <div style="margin-left: 45px; margin-bottom: 15px; display: flex; gap: 5px;">
                                                        <input type="text" class="comment-input" style="font-size: 13px; padding: 6px;" placeholder="Write a reply..."
                                                               value="@(_replyDrafts.ContainsKey(comment.Id) ? _replyDrafts[comment.Id] : "")"
                                                               @onchange="@(e => UpdateReplyDraft(comment.Id, e.Value?.ToString()))" />
                                                        <button class="comment-send-btn" style="padding: 0 10px; font-size: 12px;"
                                                                @onclick="() => SubmitReply(post.Id, comment.Id)">
                                                            Reply
                                                        </button>
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>

                                    @* --- MAIN POST COMMENT INPUT --- *@
                                    <div class="comment-input-area">
                                        <input type="text" class="comment-input" placeholder="Write a comment..."
                                               value="@(_commentDrafts.ContainsKey(post.Id) ? _commentDrafts[post.Id] : "")"
                                               @onchange="@(e => UpdateCommentDraft(post.Id, e.Value?.ToString()))" />
                                        <button class="comment-send-btn" @onclick="() => SubmitComment(post.Id)">Post</button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state center">
                        No posts found matching "<b>@postSearchTerm</b>"
                    </div>
                }
            }
            else
            {
                <div class="empty-state center">
                    No posts yet. Be the first to post in <b>#@CurrentCategory.CategoryName</b>!
                </div>
            }
        }
    </main>

    @* --- RIGHT SIDEBAR --- *@
    <aside class="sidebar sidebar-right">
        <div class="sidebar-section">
            <h3>Verified Categories</h3>
            <ul class="category-list">
                @if (VerifiedCategories != null)
                {
                    @foreach (var cat in VerifiedCategories)
                    {
                        <li>
                            <a class="category-link" href="#" @onclick:preventDefault @onclick="@(() => NavigateToCategory(cat.Id))">
                                <span class="link-text-wrapper"><span class="hashtag">#</span> @cat.CategoryName</span>
                                <i class="fas fa-check-circle verified-badge-small" title="Verified"></i>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="sidebar-section">
            <h3>Recently Created</h3>
            <ul class="category-list">
                @if (RecentCategories != null && RecentCategories.Any())
                {
                    @foreach (var cat in RecentCategories)
                    {
                        <li>
                            <a class="category-link" href="#" @onclick:preventDefault @onclick="@(() => NavigateToCategory(cat.Id))">
                                <span class="link-text-wrapper"><span class="hashtag">#</span> @cat.CategoryName</span>
                                @if (cat.IsVerified)
                                {
                                    <i class="fas fa-check-circle verified-badge-small" title="Verified"></i>
                                }
                            </a>
                        </li>
                    }
                }
                else
                {
                    <AuthorizeView>
                        <Authorized><li class="empty-list-item">You haven't created any categories yet.</li></Authorized>
                        <NotAuthorized><li class="empty-list-item">Login to see your categories.</li></NotAuthorized>
                    </AuthorizeView>
                }
            </ul>
        </div>
    </aside>
</div>

@* --- MODALS --- *@

@* Post Modal *@
@if (showPostModal)
{
    <div class="modal">
        <div class="modal-content">
            <span class="modal-close" @onclick="ClosePostModal">×</span>
            <h2>Create Post</h2>
            <div class="modal-subtitle">Posting to <b>#@CurrentCategory?.CategoryName</b></div>
            <textarea class="modal-textarea" placeholder="What's on your mind?" @bind="newPostContent"></textarea>
            <div class="file-input-wrapper">
                <label>
                    Add Media (Images or Videos): @if (isUploading)
                    {
                        <span class="upload-loading">Uploading... please wait.</span>
                    }
                </label>
                <InputFile OnChange="HandleFilesSelected" multiple accept=".jpg,.jpeg,.png,.gif,.mp4,.webm,.mov" />
            </div>
            <div class="preview-container">
                @for (int i = 0; i < pendingUploads.Count; i++)
                {
                    var index = i;
                    var file = pendingUploads[i];
                    <div class="preview-item">
                        <button class="remove-media-btn" @onclick="() => RemoveFile(index)">×</button>
                        @if (file.MediaType == "Video")
                        {
                            <video class="preview-media" src="@file.SavedPath"></video>
                        }
                        else
                        {
                            <img class="preview-media" src="@file.SavedPath" alt="Preview" />
                        }
                    </div>
                }
            </div>
            <div class="modal-actions">
                <button class="login-btn secondary" @onclick="ClosePostModal">Cancel</button>
                <button class="login-btn" @onclick="HandleCreatePost" disabled="@isUploading">@(isUploading ? "Uploading..." : "Post")</button>
            </div>
        </div>
    </div>
}

@* Request Access Modal *@
@if (showRequestModal)
{
    <div class="modal">
        <div class="modal-content">
            <span class="modal-close" @onclick="() => showRequestModal = false">×</span>
            <h2>Request Access</h2>
            <div class="modal-subtitle">Requesting permission to post in verified category <b>#@CurrentCategory?.CategoryName</b></div>
            <textarea class="modal-textarea" placeholder="Why should you be verified for this category?" @bind="requestReason"></textarea>
            <div class="modal-actions">
                <button class="login-btn secondary" @onclick="() => showRequestModal = false">Cancel</button>
                <button class="login-btn" @onclick="HandleSubmitRequest">Submit Request</button>
            </div>
        </div>
    </div>
}

@* Report Modal *@
@if (showReportModal)
{
    <div class="modal">
        <div class="modal-content">
            <span class="modal-close" @onclick="() => showReportModal = false">×</span>
            <h2 class="modal-title-error">Report Content</h2>
            <div class="modal-subtitle">Help us keep the community safe. Why are you reporting this post?</div>
            <div class="form-group">
                <label>Reason:</label>
                <select class="modal-textarea form-select" @bind="reportReasonSelection">
                    <option value="Spam">Spam</option>
                    <option value="Harassment">Harassment or Bullying</option>
                    <option value="Misinformation">Misinformation</option>
                    <option value="Hate Speech">Hate Speech</option>
                    <option value="Inappropriate">Inappropriate Content</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <label>Additional Details (Optional):</label>
                <textarea class="modal-textarea" placeholder="Please provide more details..." @bind="reportReasonDetails"></textarea>
            </div>
            <div class="modal-actions">
                <button class="login-btn secondary" @onclick="() => showReportModal = false">Cancel</button>
                <button class="login-btn btn-error" @onclick="SubmitReport">Submit Report</button>
            </div>
        </div>
    </div>
}

@* Notification Modal *@
@if (showNotificationModal)
{
    <div class="modal">
        <div class="modal-content modal-notification">
            <span class="modal-close" @onclick="CloseNotification">×</span>
            <div class="notification-icon">
                @if (notificationType == "success")
                {
                    <i class="fas fa-check-circle success-icon"></i>
                }
                else if (notificationType == "info")
                {
                    <i class="fas fa-info-circle info-icon"></i>
                }
                else
                {
                    <i class="fas fa-exclamation-circle error-icon"></i>
                }
            </div>
            <h2 class="notification-title @notificationType">
                @(notificationType == "success" ? "Success" : notificationType == "info" ? "Report Received" : "Error")
            </h2>
            <p class="notification-message">@notificationMessage</p>
            <button class="login-btn" @onclick="CloseNotification" style="width: 100px;">OK</button>
        </div>
    </div>
}

@* Create Category Confirmation Modal *@
<div class="modal" style="display: @(showCreateConfirm ? "flex" : "none")">
    <div class="modal-content">
        <span class="modal-close" @onclick="() => showCreateConfirm = false">×</span>
        <h2>Category Not Found</h2>
        <p>Would you like to create <b>#@searchTerm</b>?</p>
        <div style="display: flex; gap: 10px; margin-top: 20px;">
            <button class="login-btn" style="flex:1;" @onclick="NavigateToCreate">Yes, Create</button>
            <button class="login-btn secondary" style="flex:1;" @onclick="() => showCreateConfirm = false">Cancel</button>
        </div>
    </div>
</div>

@* Auth Overlay *@
<div id="auth-overlay" class="auth-overlay" style="display: @(ShowLoginOverlay ? "flex" : "none");">
    <div class="auth-card">
        <div class="auth-card-header">
            <h3>Welcome</h3>
            <span style="cursor:pointer; font-size:20px;" @onclick="() => ShowLoginOverlay = false">×</span>
        </div>
        <div id="login-view">
            <form action="api/Account/login" method="post">
                <div class="auth-input-group">
                    <input type="text" name="username" placeholder="Username" required />
                </div>
                <div class="auth-input-group">
                    <input type="password" name="password" placeholder="Password" required />
                </div>
                <button type="submit" class="auth-btn">Log In</button>
            </form>
            <div class="auth-switch">Don't have an account? <a onclick="document.getElementById('login-view').style.display='none'; document.getElementById('register-view').style.display='block';">Register</a></div>
        </div>
        <div id="register-view" style="display: none;">
            <form action="api/Account/register" method="post">
                <div class="auth-input-group">
                    <input type="email" name="email" placeholder="Email Address" required />
                </div>
                <div class="auth-input-group">
                    <input type="text" name="username" placeholder="Username" required />
                </div>
                <div class="auth-input-group">
                    <input type="password" name="password" placeholder="Password" required />
                </div>
                <button type="submit" class="auth-btn">Sign Up</button>
            </form>
            <div class="auth-switch">Already have an account? <a onclick="document.getElementById('register-view').style.display='none'; document.getElementById('login-view').style.display='block';">Log In</a></div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    // Reads focusPostId from the URL ?focusPostId=123
    [SupplyParameterFromQuery] public int? FocusPostId { get; set; }

    // ============ DATA MODELS ============
    private Categories? CurrentCategory;
    private List<Posts> CategoryPosts = new();
    private List<Categories> RecentCategories = new();
    private List<Categories> FollowedCategories = new();
    private List<Categories> VerifiedCategories = new();

    // ============ UI STATE ============
    private bool IsLoading = true;
    private string Title = "Category";
    private string errorMessage = "";
    private bool ShowLoginOverlay = false;

    // ============ USER STATE ============
    private string? currentUserId;
    private bool isAdmin = false;
    private Users? currentUser;

    // ============ CATEGORY STATE ============
    private bool isFollowing = false;
    private bool hasApprovedAccess = false;
    private bool hasPendingRequest = false;

    // ============ MODAL VISIBILITY ============
    private bool showPostModal = false;
    private bool showRequestModal = false;
    private bool showReportModal = false;
    private bool showNotificationModal = false;
    private bool showCreateConfirm = false;

    // ============ FORM DATA ============
    private string searchTerm = "";
    private string postSearchTerm = "";
    private string newPostContent = "";
    private string requestReason = "";
    private int reportPostId = 0;
    private string reportReasonSelection = "Spam";
    private string reportReasonDetails = "";
    private string notificationMessage = "";
    private string notificationType = "success";

    // ============ COMMENTS & MEDIA ============
    private Dictionary<int, bool> _showComments = new();
    private Dictionary<int, List<Comments>> _postComments = new();
    private Dictionary<int, string> _commentDrafts = new();
    private Dictionary<int, int> _carouselIndices = new();
    private List<PendingFile> pendingUploads = new();
    private bool isUploading = false;

    // ============ REPLY MANAGEMENT (NEW) ============
    private Dictionary<int, bool> _activeReplyBoxes = new(); // Key: CommentId (Parent)
    private Dictionary<int, string> _replyDrafts = new();    // Key: CommentId (Parent)

    // ============ CONSTANTS ============
    private const long MaxFileSize = 1024 * 1024 * 200;
    private const int MaxAllowedFiles = 10;

    // ============ LIFECYCLE ============
    protected override async Task OnParametersSetAsync()
    {
        await InitializePageData();
    }

    // ============ INITIALIZATION ============
    private async Task InitializePageData()
    {
        ResetPageState();
        try
        {
            using var context = DbFactory.CreateDbContext();
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            await LoadUserData(user, context);
            await LoadCategoryData(context);
            await LoadUserSpecificData(context);
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading: " + ex.Message;
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void ResetPageState()
    {
        IsLoading = true;
        errorMessage = "";
        hasApprovedAccess = false;
        hasPendingRequest = false;
    }

    private async Task LoadUserData(System.Security.Claims.ClaimsPrincipal user, SoSuSaFsdContext context)
    {
        currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (currentUserId == null && user.Identity?.IsAuthenticated == true)
        {
            using var scope = ScopeFactory.CreateScope();
            var userManager = scope.ServiceProvider.GetRequiredService<UserManager<Users>>();
            var dbUser = await userManager.GetUserAsync(user);
            currentUserId = dbUser?.Id;
            currentUser = dbUser;
        }
        else if (currentUserId != null)
        {
            using var scope = ScopeFactory.CreateScope();
            var userManager = scope.ServiceProvider.GetRequiredService<UserManager<Users>>();
            currentUser = await userManager.FindByIdAsync(currentUserId);
        }

        if (user.Identity?.IsAuthenticated == true)
        {
            isAdmin = user.IsInRole("Admin");
        }
    }

    private async Task LoadCategoryData(SoSuSaFsdContext context)
    {
        // Use CategoryService
        VerifiedCategories = await CategoryService.GetVerifiedCategoriesAsync(5);
        
        CurrentCategory = await CategoryService.GetCategoryByIdAsync(Id);
        if (CurrentCategory != null)
        {
            Title = "#" + CurrentCategory.CategoryName;
        }

        // Use PostService
        CategoryPosts = await PostService.GetCategoryPostsAsync(Id);
    }

    private async Task LoadUserSpecificData(SoSuSaFsdContext context)
    {
        if (string.IsNullOrEmpty(currentUserId) || CurrentCategory == null)
        {
            return;
        }

        // Use CategoryService
        isFollowing = await CategoryService.IsUserFollowingAsync(currentUserId, CurrentCategory.Id);
