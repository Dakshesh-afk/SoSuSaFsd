@page "/categories/delete"
@using Microsoft.EntityFrameworkCore
@using SoSuSaFsd.Domain
@inject IDbContextFactory<SoSuSaFsd.Data.SoSuSaFsdContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Category</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Categories</h2>
    <hr />
    @if (categories is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">CategoryName</dt>
            <dd class="col-sm-10">@categories.CategoryName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@categories.CategoryDescription</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsRestricted</dt>
            <dd class="col-sm-10">@categories.CategoryIsRestricted</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@categories.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@categories.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@categories.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@categories.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="categories" OnValidSubmit="DeleteCategories" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(categories is null)">Delete</button> |
            <a href="/categories">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Categories? categories;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        categories = await context.Categories.FirstOrDefaultAsync(m => m.Id == Id);

        if (categories is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCategories()
    {
        using var context = DbFactory.CreateDbContext();
        context.Categories.Remove(categories!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/categories");
    }
}