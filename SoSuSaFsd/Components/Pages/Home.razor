    </aside>

</div>

<div id="report-modal" class="modal">
    <div class="modal-content">
        <span class="modal-close" onclick="closeReportModal()">&times;</span>
        <h2>Report Post</h2>
        <hr />
        <p>Why are you reporting this post?</p>
        <form action="#" method="post">
            <div style="margin-bottom: 10px;">
                <input type="radio" id="spam" name="reason" value="spam">
                <label for="spam">It's spam</label>
            </div>
            <div style="margin-bottom: 10px;">
                <input type="radio" id="misinfo" name="reason" value="misinfo">
                <label for="misinfo">Misinformation / Fake News</label>
            </div>
            <div style="margin-bottom: 20px;">
                <input type="radio" id="other" name="reason" value="other">
                <label for="other">Something else</label>
            </div>
            <button type="button" class="login-btn" onclick="closeReportModal()">Submit Report</button>
        </form>
    </div>
</div>

<div id="auth-overlay" class="auth-overlay">
    <div class="auth-card">
        <div class="logo-area">
            <div class="logo-icon">
                <i class="fas fa-check"></i>
            </div>
            <span class="logo-text">SoSuSa</span>
        </div>

        <div id="login-view">
            <div class="auth-header">Welcome</div>
            <form onsubmit="event.preventDefault(); loginUser();">
                <div class="auth-input-group">
                    <input type="text" placeholder="Username or Email" required>
                </div>
                <div class="auth-input-group">
                    <input type="password" placeholder="Password" required>
                </div>
                <button type="submit" class="auth-btn">Log In</button>
            </form>
            <div class="auth-switch">
                Don't have an account? <a onclick="toggleAuthMode()">Register</a>
            </div>
        </div>

        <div id="register-view" class="hidden">
            <div class="auth-header">Create Account</div>
            <form onsubmit="event.preventDefault(); loginUser();">
                <div class="auth-input-group">
                    <input type="email" placeholder="Email Address" required>
                </div>
                <div class="auth-input-group">
                    <input type="text" placeholder="Username" required>
                </div>
                <div class="auth-input-group">
                    <input type="password" placeholder="Password" required>
                </div>
                <button type="submit" class="auth-btn">Sign Up</button>
            </form>
            <div class="auth-switch">
                Already have an account? <a onclick="toggleAuthMode()">Log In</a>
            </div>
        </div>

    </div>
</div>

<script>
    // --- AUTH LOGIC ---
    function loginUser() {
        document.getElementById('auth-overlay').style.display = 'none';
        showSection('profile');
    }

    function toggleAuthMode() {
        const loginView = document.getElementById('login-view');
        const regView = document.getElementById('register-view');

        // Logic adjusted for CSS-based toggling
        if (loginView.style.display === 'none') {
            loginView.style.display = 'block';
            regView.style.display = 'none';
        } else {
            loginView.style.display = 'none';
            regView.style.display = 'block';
        }
    }

    function showLoginOverlay() {
        document.getElementById('auth-overlay').style.display = 'flex';
        // Reset to home view behind the blur
        showSection('home');
        // Ensure we are back to login view when reopening
        document.getElementById('login-view').style.display = 'block';
        document.getElementById('register-view').style.display = 'none';
    }

    // --- MODAL LOGIC ---
    function openReportModal() {
        document.getElementById('report-modal').style.display = 'flex';
    }

    function closeReportModal() {
        document.getElementById('report-modal').style.display = 'none';
    }

    window.onclick = function(event) {
        const modal = document.getElementById('report-modal');
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

    // --- VIEW SWITCHING LOGIC ---
    function showSection(sectionName) {
        document.querySelectorAll('.section-view').forEach(el => el.classList.remove('active'));
        document.querySelectorAll('.main-nav a').forEach(el => el.classList.remove('active-link'));

        document.getElementById('nav-' + sectionName).classList.add('active-link');
        document.getElementById('sidebar-' + sectionName).classList.add('active');
        document.getElementById('feed-' + sectionName).classList.add('active');

        const headerSearch = document.getElementById('header-search-input');
        const rightSidebar = document.getElementById('right-sidebar');

        if (sectionName === 'profile') {
            headerSearch.placeholder = "Search for users...";
            rightSidebar.style.display = 'none';
        } else if (sectionName === 'settings') {
            headerSearch.placeholder = "Search posts...";
            rightSidebar.style.display = 'none';
            showSettingsForm('profile');
        } else {
            headerSearch.placeholder = "Search posts...";
            rightSidebar.style.display = 'flex';
        }
    }

    // --- SETTINGS SUB-FORM SWITCHING ---
    function showSettingsForm(formName) {
        document.getElementById('settings-form-profile').style.display = 'none';
        document.getElementById('settings-form-password').style.display = 'none';
        document.getElementById('settings-form-verification').style.display = 'none';

        document.getElementById('set-link-profile').classList.remove('active-setting');
        document.getElementById('set-link-password').classList.remove('active-setting');
        document.getElementById('set-link-verification').classList.remove('active-setting');

        document.getElementById('settings-form-' + formName).style.display = 'block';
        document.getElementById('set-link-' + formName).classList.add('active-setting');
    }
</script>