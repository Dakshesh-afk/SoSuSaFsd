@using SoSuSaFsd.Domain

@* AdminAccessRequestsPanel - Category access request management *@

<div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
    <div class="p-4 border-b bg-gray-50">
        <h3 class="font-bold text-gray-900">Category Access Requests</h3>
        <p class="text-xs text-gray-600 mt-1">Review and process verification requests from users</p>
    </div>
    
    @if (!AccessRequests.Any())
    {
        <div class="p-8 text-center text-gray-500">
            <i class="fas fa-inbox text-4xl mb-3"></i>
            <p>No access requests at this time</p>
        </div>
    }
    else
    {
        <div class="divide-y divide-gray-200">
            @foreach (var request in AccessRequests)
            {
                <div class="p-6 hover:bg-gray-50 transition-colors">
                    <div class="flex items-start justify-between gap-4">
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
                                    <i class="fas fa-user text-gray-600"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h4 class="font-bold text-gray-900 truncate">
                                        @(request.User?.DisplayName ?? request.User?.UserName ?? "Unknown User")
                                    </h4>
                                    <p class="text-xs text-gray-500">
                                        Requesting access to <strong class="text-gray-700">#@(request.Category?.CategoryName ?? "Unknown")</strong>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="mt-3 space-y-2">
                                <div class="flex items-start gap-2">
                                    <i class="fas fa-quote-left text-gray-400 text-xs mt-1"></i>
                                    <p class="text-sm text-gray-700 flex-1">
                                        @(string.IsNullOrEmpty(request.Reason) ? "No reason provided" : request.Reason)
                                    </p>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(request.SupportingDocumentPath))
                                {
                                    <div class="flex items-center gap-2 text-sm">
                                        <i class="fas fa-paperclip text-blue-600"></i>
                                        <a href="@request.SupportingDocumentPath" 
                                           target="_blank" 
                                           class="text-blue-600 hover:underline font-medium">
                                            View supporting document
                                        </a>
                                    </div>
                                }
                                
                                <div class="flex items-center gap-4 text-xs text-gray-500">
                                    <span><i class="far fa-calendar mr-1"></i>@request.DateCreated.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                                    <span class="px-2 py-0.5 rounded text-[10px] font-bold uppercase @(request.Status == "Approved" ? "bg-green-50 text-green-700" : request.Status == "Rejected" ? "bg-red-50 text-red-700" : "bg-amber-50 text-amber-700")">
                                        @request.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        @if (request.Status == "Pending")
                        {
                            <div class="flex-shrink-0 flex flex-col gap-2 min-w-[120px]">
                                <button @onclick="@(() => OnApproveRequest.InvokeAsync(request.Id))" 
                                        class="w-full px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-bold text-xs uppercase rounded transition-colors flex items-center justify-center gap-2">
                                    <i class="fas fa-check"></i> Approve
                                </button>
                                <button @onclick="@(() => OnRejectRequest.InvokeAsync(request.Id))" 
                                        class="w-full px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold text-xs uppercase rounded transition-colors flex items-center justify-center gap-2">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="flex-shrink-0 text-center">
                                <div class="px-4 py-2 bg-gray-100 text-gray-500 font-medium text-xs rounded">
                                    <i class="fas fa-check-circle mr-1"></i>
                                    Processed
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    /// <summary>
    /// List of category access requests
    /// </summary>
    [Parameter]
    public List<CategoryAccessRequests> AccessRequests { get; set; } = new();

    /// <summary>
    /// Callback to approve access request
    /// </summary>
    [Parameter]
    public EventCallback<int> OnApproveRequest { get; set; }

    /// <summary>
    /// Callback to reject access request
    /// </summary>
    [Parameter]
    public EventCallback<int> OnRejectRequest { get; set; }
}
