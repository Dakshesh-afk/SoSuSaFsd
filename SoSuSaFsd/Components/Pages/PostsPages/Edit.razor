@page "/posts/edit"
@using Microsoft.EntityFrameworkCore
@using SoSuSaFsd.Domain
@inject IDbContextFactory<SoSuSaFsd.Data.SoSuSaFsdContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Posts</h2>
<hr />
@if (Posts is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Posts" OnValidSubmit="UpdatePosts" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Posts.Id" value="@Posts.Id" />
                <div class="mb-3">
                    <label for="content" class="form-label">Content:</label>
                    <InputText id="content" @bind-Value="Posts.Content" class="form-control" />
                    <ValidationMessage For="() => Posts.Content" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="poststatus" class="form-label">PostStatus:</label>
                    <InputText id="poststatus" @bind-Value="Posts.PostStatus" class="form-control" />
                    <ValidationMessage For="() => Posts.PostStatus" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="userid" class="form-label">UserId:</label>
                    <InputNumber id="userid" @bind-Value="Posts.UserId" class="form-control" />
                    <ValidationMessage For="() => Posts.UserId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="categoryid" class="form-label">CategoryId:</label>
                    <InputNumber id="categoryid" @bind-Value="Posts.CategoryId" class="form-control" />
                    <ValidationMessage For="() => Posts.CategoryId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="Posts.DateCreated" class="form-control" />
                    <ValidationMessage For="() => Posts.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="Posts.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => Posts.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="Posts.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => Posts.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="Posts.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => Posts.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/posts">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Posts? Posts { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Posts ??= await context.Posts.FirstOrDefaultAsync(m => m.Id == Id);

        if (Posts is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdatePosts()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Posts!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!PostsExists(Posts!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/posts");
    }

    private bool PostsExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Posts.Any(e => e.Id == id);
    }
}
