@page "/comments/delete"
@using Microsoft.EntityFrameworkCore
@using SoSuSaFsd.Domain
@inject IDbContextFactory<SoSuSaFsd.Data.SoSuSaFsdContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Comments</h2>
    <hr />
    @if (comments is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Content</dt>
            <dd class="col-sm-10">@comments.Content</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PostID</dt>
            <dd class="col-sm-10">@comments.PostID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserID</dt>
            <dd class="col-sm-10">@comments.UserID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ParentCommentID</dt>
            <dd class="col-sm-10">@comments.ParentCommentID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@comments.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@comments.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@comments.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@comments.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="comments" OnValidSubmit="DeleteComments" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(comments is null)">Delete</button> |
            <a href="/comments">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Comments? comments;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        comments = await context.Comments.FirstOrDefaultAsync(m => m.Id == Id);

        if (comments is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteComments()
    {
        using var context = DbFactory.CreateDbContext();
        context.Comments.Remove(comments!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/comments");
    }
}
