@page "/admin"
@rendermode InteractiveServer
@layout Layout.EmptyLayout
@using Microsoft.AspNetCore.Authorization
@using SoSuSaFsd.Components.Pages.AdminComponents
@using SoSuSaFsd.Services
@using SoSuSaFsd.Domain

@attribute [Authorize(Roles = "Admin")]

@inject IAdminService AdminService
@inject NavigationManager NavigationManager

<PageTitle>SoSuSa - Admin Dashboard</PageTitle>

<HeadContent>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="styles/admin.css">
    <script>
        // Add admin-page class to html element for CSS targeting
        document.documentElement.classList.add('admin-page');
        document.body.classList.add('admin-page');
    </script>
</HeadContent>

<header class="bg-white border-b-2 border-gray-200 sticky top-0 z-50 py-3 shadow-sm">
    <div class="w-[95%] mx-auto flex items-center justify-between">
        <div class="flex items-center cursor-pointer" @onclick='@(() => activeTab = "dashboard")'>
            <div class="logo-icon mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12" /></svg>
            </div>
            <div class="flex flex-col">
                <span class="text-2xl font-bold text-gray-900 tracking-tight leading-none">SoSuSa</span>
                <span class="text-[10px] uppercase font-bold text-gray-500 tracking-widest leading-none mt-0.5">Dashboard</span>
            </div>
        </div>

        <nav class="flex gap-8">
            <button type="button" @onclick='@(() => activeTab = "dashboard")' class="nav-link @(activeTab == "dashboard" ? "active" : "") bg-transparent border-0 cursor-pointer">
                Dashboard
            </button>
            <button type="button" @onclick='@(() => activeTab = "reports")' class="nav-link @(activeTab == "reports" ? "active" : "") bg-transparent border-0 cursor-pointer">
                Moderation
                @if (PendingNotificationCount > 0)
                {
                    <span class="bg-red-500 text-white text-[10px] px-1.5 py-0.5 rounded-full -mt-1 ml-1">@PendingNotificationCount</span>
                }
            </button>
            <button type="button" @onclick='@(() => activeTab = "verifications")' class="nav-link @(activeTab == "verifications" ? "active" : "") bg-transparent border-0 cursor-pointer">
                Access
            </button>
            <button type="button" @onclick='@(() => activeTab = "categories")' class="nav-link @(activeTab == "categories" ? "active" : "") bg-transparent border-0 cursor-pointer">
                Categories
            </button>
            <button type="button" @onclick='@(() => activeTab = "users")' class="nav-link @(activeTab == "users" ? "active" : "") bg-transparent border-0 cursor-pointer">
                Users
            </button>
        </nav>

        <div class="flex items-center gap-6">
            <div class="flex items-center gap-3">
                <div class="text-right hidden sm:block">
                    <p class="text-sm font-bold text-gray-900 leading-tight">Administrator</p>
                    <p class="text-[10px] text-gray-500 uppercase tracking-wider font-semibold">Super User</p>
                </div>
                <div class="w-10 h-10 rounded-full bg-black text-white flex items-center justify-center font-bold text-sm border-2 border-gray-200 shadow-sm">AU</div>
            </div>
            <button type="button" @onclick="ExitAdmin" class="text-gray-400 hover:text-red-600 transition-colors bg-transparent border-0 cursor-pointer p-1 rounded-full hover:bg-gray-100" title="Exit to App">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" /><polyline points="16 17 21 12 16 7" /><line x1="21" x2="9" y1="12" y2="12" /></svg>
            </button>
        </div>
    </div>
</header>

<main class="w-[95%] mx-auto py-8">
    <div class="mb-8 flex justify-between items-end">
        <div>
            <h2 class="text-3xl font-extrabold text-gray-900 capitalize tracking-tight">@activeTab</h2>
            <p class="text-gray-500 mt-1 font-medium">Manage your platform's content and settings.</p>
        </div>

        @if (activeTab == "reports")
        {
            <div class="flex items-center gap-2">
                <label class="text-sm font-semibold text-gray-600">Sort by:</label>
                <select @bind="reportFilter" class="filter-select">
                    <option value="recent_all">Latest (All)</option>
                    <option value="recent_pending">Latest (Pending Only)</option>
                    <option value="most_all">Most Reported (All)</option>
                    <option value="most_pending">Most Reported (Pending Only)</option>
                </select>
            </div>
        }
    </div>

    <div class="admin-panel @(activeTab == "dashboard" ? "active" : "")" id="panel-dashboard">
        <div class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="bg-white p-5 rounded-lg border border-gray-200 shadow-sm flex items-start justify-between">
                    <div>
                        <p class="text-gray-500 text-xs font-bold uppercase tracking-wide mb-1">Total Users</p>
                        <h3 class="text-2xl font-bold text-gray-900">@AllUsers.Count</h3>
                    </div>
                    <div class="p-2 rounded-md bg-blue-600 bg-opacity-90 text-white w-9 h-9 flex items-center justify-center shadow-sm">#</div>
                </div>
                <div class="bg-white p-5 rounded-lg border border-gray-200 shadow-sm flex items-start justify-between">
                    <div>
                        <p class="text-gray-500 text-xs font-bold uppercase tracking-wide mb-1">Pending Reports</p>
                        <h3 class="text-2xl font-bold text-gray-900">@PendingNotificationCount</h3>
                    </div>
                    <div class="p-2 rounded-md bg-amber-500 bg-opacity-90 text-white w-9 h-9 flex items-center justify-center shadow-sm">#</div>
                </div>
                <div class="bg-white p-5 rounded-lg border border-gray-200 shadow-sm flex items-start justify-between">
                    <div>
                        <p class="text-gray-500 text-xs font-bold uppercase tracking-wide mb-1">Category Requests</p>
                        <h3 class="text-2xl font-bold text-gray-900">@AccessRequests.Count(v => v.Status == "Pending")</h3>
                    </div>
                    <div class="p-2 rounded-md bg-green-600 bg-opacity-90 text-white w-9 h-9 flex items-center justify-center shadow-sm">#</div>
                </div>
                <div class="bg-white p-5 rounded-lg border border-gray-200 shadow-sm flex items-start justify-between">
                    <div>
                        <p class="text-gray-500 text-xs font-bold uppercase tracking-wide mb-1">Categories</p>
                        <h3 class="text-2xl font-bold text-gray-900">@AllCategories.Count</h3>
                    </div>
                    <div class="p-2 rounded-md bg-purple-600 bg-opacity-90 text-white w-9 h-9 flex items-center justify-center shadow-sm">#</div>
                </div>
            </div>
        </div>
    </div>

    <div class="admin-panel @(activeTab == "reports" ? "active" : "")" id="panel-reports">
        <AdminReportsPanel 
            AllReports="@AllReports"
            ReportFilter="@reportFilter"
            OnOpenContentModal="@OpenContentModal"
            OnDismissReportGroup="@DismissReportGroup"
            OnUndoDismiss="@UndoDismiss"
            OnRequestDelete="@RequestDelete"
            OnBanUser="@BanReportedUser" />
    </div>

    <div class="admin-panel @(activeTab == "users" ? "active" : "")" id="panel-users">
        <AdminUsersPanel 
            AllUsers="@AllUsers"
            UserVerifiedCategories="@UserVerifiedCategories"
            OnToggleUserBan="@ToggleUserBan"
            OnRemoveCategoryAccess="@RemoveCategoryAccess" />
    </div>

    <div class="admin-panel @(activeTab == "categories" ? "active" : "")" id="panel-categories">
        <AdminCategoriesPanel 
            AllCategories="@AllCategories"
            OnToggleVerification="@ToggleVerification"
            OnRequestDeleteCategory="@RequestDeleteCategory" />
    </div>

    <div class="admin-panel @(activeTab == "verifications" ? "active" : "")" id="panel-verifications">
        <AdminAccessRequestsPanel 
            AccessRequests="@AccessRequests"
            OnApproveRequest="@ApproveRequest"
            OnRejectRequest="@RejectRequest" />
    </div>
</main>

@* VIEW CONTENT MODAL *@
@if (showContentModal && selectedReport != null)
{
    <div class="modal">
        <div class="modal-content">
            <span class="modal-close" @onclick="@(() => showContentModal = false)">×</span>
            <h2 style="margin-top: 0;">Reported Content</h2>
            
            @if (selectedReport.Post != null)
            {
                <div style="margin: 15px 0;">
                    <div style="font-weight: bold; margin-bottom: 5px;">Post by @(selectedReport.Post.User?.UserName ?? "Unknown")</div>
                    <div style="color: #666; font-size: 13px; margin-bottom: 10px;">
                        Posted: @selectedReport.Post.DateCreated.ToString("MMM dd, yyyy 'at' h:mm tt")
                    </div>
                    <div style="padding: 15px; background: #f9fafb; border-radius: 8px; border: 1px solid #e5e7eb;">
                        <p style="margin: 0; white-space: pre-wrap;">@selectedReport.Post.Content</p>
                    </div>
                    
                    @if (selectedReport.Post.Media != null && selectedReport.Post.Media.Any())
                    {
                        var mediaList = selectedReport.Post.Media.ToList();
                        var totalMedia = mediaList.Count;
                        var currentIndex = GetCurrentIndex(selectedReport.Post.Id);
                        var activeMedia = mediaList[currentIndex];
                        
                        <div class="carousel-container">
                            @if (totalMedia > 1)
                            {
                                <button class="carousel-btn prev" @onclick="@(() => PrevSlide(selectedReport.Post.Id, totalMedia))">◄</button>
                            }
                            
                            @if (activeMedia.MediaType == "Video")
                            {
                                <video controls class="carousel-media" src="@activeMedia.MediaPath">
                                    Your browser does not support the video tag.
                                </video>
                            }
                            else
                            {
                                <img class="carousel-media" src="@activeMedia.MediaPath" alt="Post Media" />
                            }
                            
                            @if (totalMedia > 1)
                            {
                                <button class="carousel-btn next" @onclick="@(() => NextSlide(selectedReport.Post.Id, totalMedia))">►</button>
                                <div style="position: absolute; bottom: 10px; right: 10px; background: rgba(0,0,0,0.6); color: white; padding: 5px 10px; border-radius: 15px; font-size: 12px;">
                                    @(currentIndex + 1) / @totalMedia
                                </div>
                            }
                        </div>
                    }
                </div>
                
                <div style="margin-top: 20px; padding: 12px; background: #fff3cd; border-left: 3px solid #f59e0b; border-radius: 4px;">
                    <strong>Report Reason:</strong> @selectedReport.Reason
                </div>
            }
            
            <div style="display: flex; justify-content: flex-end; gap: 10px; margin-top: 20px;">
                <button class="login-btn secondary" @onclick="@(() => showContentModal = false)">Close</button>
            </div>
        </div>
    </div>
}

@* DELETE CONFIRMATION MODAL *@
@if (showDeleteConfirmation)
{
    <div class="modal">
        <div class="modal-content modal-mini">
            <span class="modal-close" @onclick="@CancelDelete">×</span>
            <i class="fas fa-exclamation-triangle" style="font-size: 48px; color: #ef4444; margin-bottom: 15px;"></i>
            <h2 style="margin: 10px 0; color: #ef4444;">Confirm Delete</h2>
            <p style="margin: 20px 0;">
                @if (pendingDeleteReportId != 0)
                {
                    <text>This will permanently delete the reported content. This action cannot be undone.</text>
                }
                else
                {
                    <text>This will permanently delete this category and all its posts. This action cannot be undone.</text>
                }
            </p>
            <div style="display: flex; justify-content: center; gap: 10px; margin-top: 25px;">
                <button class="login-btn secondary" @onclick="@CancelDelete">Cancel</button>
                <button class="login-btn" style="background-color: #ef4444;" @onclick="@ConfirmDelete">Delete</button>
            </div>
        </div>
    </div>
}

@code {
    private string activeTab = "dashboard";
    private string reportFilter = "recent_all";
    private bool showContentModal = false;
    private bool showDeleteConfirmation = false;
    private int pendingDeleteReportId = 0;
    private int pendingDeleteCategoryId = 0;
    private Reports? selectedReport;
    private Dictionary<int, int> _carouselIndices = new();

    private List<Users> AllUsers = new();
    private List<Categories> AllCategories = new();
    private List<CategoryAccessRequests> AccessRequests = new();
    private List<Reports> AllReports = new();
    private Dictionary<string, List<Categories>> UserVerifiedCategories = new();

    private int PendingNotificationCount =>
        AllReports?.GroupBy(r => new { r.PostID, r.CommentID, r.CategoryID, r.TargetUserID })
            .Where(g => !g.Any(r => r.Status == "Resolved" || r.Status == "Dismissed"))
            .Sum(g => g.Count(r => r.Status == "Pending")) ?? 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        AllUsers = await AdminService.GetAllUsersAsync();
        AllCategories = await AdminService.GetAllCategoriesAsync();
        AccessRequests = await AdminService.GetAccessRequestsAsync();
        AllReports = await AdminService.GetAllReportsAsync();
        UserVerifiedCategories = await AdminService.GetUserVerifiedCategoriesMapAsync();
    }

    private async Task DismissReportGroup(int reportId)
    {
        await AdminService.DismissReportGroupAsync(reportId);
        await LoadData();
    }

    private async Task UndoDismiss(int reportId)
    {
        await AdminService.UndoDismissAsync(reportId);
        await LoadData();
    }

    private void RequestDelete(int reportId)
    {
        pendingDeleteReportId = reportId;
        pendingDeleteCategoryId = 0;
        showDeleteConfirmation = true;
    }

    private void RequestDeleteCategory(int categoryId)
    {
        pendingDeleteCategoryId = categoryId;
        pendingDeleteReportId = 0;
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
        pendingDeleteReportId = 0;
        pendingDeleteCategoryId = 0;
    }

    private async Task ConfirmDelete()
    {
        if (pendingDeleteReportId != 0)
            await AdminService.DeleteReportedContentAsync(pendingDeleteReportId);
        else if (pendingDeleteCategoryId != 0)
            await AdminService.DeleteCategoryAsync(pendingDeleteCategoryId);

        showDeleteConfirmation = false;
        pendingDeleteReportId = 0;
        pendingDeleteCategoryId = 0;
        await LoadData();
    }

    private async Task ToggleVerification(int categoryId)
    {
        try
        {
            await AdminService.ToggleCategoryVerificationAsync(categoryId);
            await LoadData();
        }
        catch (Exception ex) { Console.WriteLine($"Error: {ex.Message}"); }
    }

    private async Task ApproveRequest(int requestId)
    {
        try
        {
            await AdminService.ApproveAccessRequestAsync(requestId);
            await LoadData();
        }
        catch { }
    }

    private async Task RejectRequest(int requestId)
    {
        try
        {
            await AdminService.RejectAccessRequestAsync(requestId);
            await LoadData();
        }
        catch { }
    }

    private async Task ToggleUserBan(string userId)
    {
        try
        {
            await AdminService.ToggleUserBanAsync(userId);
            await LoadData();
        }
        catch { }
    }

    private async Task BanReportedUser(int reportId)
    {
        try
        {
            var report = AllReports.FirstOrDefault(r => r.ReportID == reportId);
            if (report?.TargetUserID != null)
            {
                await AdminService.ToggleUserBanAsync(report.TargetUserID);
                await AdminService.ResolveReportGroupAsync(reportId);
                await LoadData();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error banning user: {ex.Message}");
        }
    }

    private async Task RemoveCategoryAccess((string UserId, int CategoryId) data)
    {
        try
        {
            await AdminService.RemoveUserCategoryAccessAsync(data.UserId, data.CategoryId);
            await LoadData();
        }
        catch { }
    }

    private void ExitAdmin() => NavigationManager.NavigateTo("/", forceLoad: true);

    private void OpenContentModal(int reportId)
    {
        selectedReport = AllReports.FirstOrDefault(r => r.ReportID == reportId);
        if (selectedReport != null) showContentModal = true;
    }

    private int GetCurrentIndex(int postId)
    {
        if (!_carouselIndices.ContainsKey(postId)) _carouselIndices[postId] = 0;
        return _carouselIndices[postId];
    }

    private void NextSlide(int postId, int totalCount)
    {
        var currentIndex = GetCurrentIndex(postId);
        _carouselIndices[postId] = (currentIndex + 1) % totalCount;
    }

    private void PrevSlide(int postId, int totalCount)
    {
        var currentIndex = GetCurrentIndex(postId);
        _carouselIndices[postId] = (currentIndex - 1 + totalCount) % totalCount;
    }

    private string GetStatusBadgeClass(string status) =>
        status switch
        {
            "Resolved" => "badge-resolved",
            "Dismissed" => "badge-dismissed",
            _ => "badge-pending"
        };
}